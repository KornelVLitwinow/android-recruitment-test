<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.AppTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="AppTheme.SplashTheme">
        <item name="android:colorPrimaryDark">@color/splash_bg</item>
        <item name="android:statusBarColor">@color/splash_bg</item>
    </style>

    <style name="ProgressStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/accent_color</item>
    </style>

    <style name="Widget.AppTheme.Banner" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/error_color</item>
        <item name="android:textColor">@color/banner_background</item>
    </style>

</resources>